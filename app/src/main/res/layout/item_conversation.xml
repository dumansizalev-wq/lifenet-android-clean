<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#1A1A1A"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="#333333"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="12:45"
            android:textColor="#666666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txtLastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtContactName"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/statusIcon"
            android:layout_toStartOf="@id/badgeUnread"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Latest message preview goes here..."
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_below="@id/txtContactName"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            android:src="@android:drawable/ic_menu_send"
            app:tint="#666666"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/badgeUnread"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/txtTime"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_glow_active"
            android:backgroundTint="#D4AF37"
            android:gravity="center"
            android:text="1"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
